<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_tak"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:layout_marginBottom="44dp"
        android:text="@string/btn_tak"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_history" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:text="กรุณาเลือกจังหวัด"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_province" />

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="330dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        android:text="ลองกดปุ่ม"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <ImageView
        android:id="@+id/img_province"
        android:layout_width="0dp"
        android:layout_height="291dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tak_img" />

    <Button
        android:id="@+id/btn_nan"
        android:layout_width="64dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="44dp"
        android:text="@string/btn_nan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_tak" />

    <Button
        android:id="@+id/btn_buriram"
        android:layout_width="67dp"
        android:layout_height="53dp"
        android:layout_marginBottom="44dp"
        android:text="@string/btn_buriram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_chonburi"
        app:layout_constraintStart_toEndOf="@+id/btn_nan" />

    <Button
        android:id="@+id/btn_chonburi"
        android:layout_width="70dp"
        android:layout_height="51dp"
        android:layout_marginBottom="44dp"
        android:text="@string/btn_chonburi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_history" />
</androidx.constraintlayout.widget.ConstraintLayout>